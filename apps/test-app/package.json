{
    "name": "test-app",
    "version": "1.0.0",
    "description": "Test application for shared configurations",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "tsc",
        "dev": "tsx src/index.ts",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "format": "prettier --write \"src/**/*.{ts,js,json}\"",
        "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "tsx": "^4.7.0"
    },
    "devDependencies": {
        "@yo0-config/eslint-config": "workspace:*",
        "@yo0-config/prettier-config": "workspace:*",
        "@yo0-config/typescript-config": "workspace:*"
    }
}
