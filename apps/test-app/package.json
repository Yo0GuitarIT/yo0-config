{
  "name": "test-app",
  "version": "1.0.0",
  "description": "Test application for shared configurations",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "@yo0/eslint-config": "workspace:*",
    "@yo0/prettier-config": "workspace:*",
    "@yo0/typescript-config": "workspace:*",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.2.0",
    "typescript": "^5.4.0"
  }
}
