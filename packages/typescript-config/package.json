{
    "name": "@yo0-guitar-dev/typescript-config",
    "version": "1.0.0",
    "description": "Shared TypeScript configurations",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*",
        "configs/**/*"
    ],
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "clean": "rm -rf dist",
        "typecheck": "tsc --noEmit"
